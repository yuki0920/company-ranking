# frozen_string_literal: true

{
  industry_categories: @industry_categories.map { |category|
    {
      id: category.id,
      name: category.name,
      industries: @industries[category.id]&.map { |industry|
        {
          id: industry.id,
          name: industry.name,
          code: industry.code,
          count: @industries_count[industry.code]
        }
      }
    }
  }
}
